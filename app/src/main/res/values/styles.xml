<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppSmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppMediumText">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppLargeText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppExtraLargeText">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="AppExtraLightText">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#909090</item>
    </style>
</resources>
